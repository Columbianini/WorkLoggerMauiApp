<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdnWorkLog.View.ManualTaskCreatePage"
             Title="ManualTaskCreatePage">
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="50" Margin="25">
        <Label Text="Welcome to Create New Task" HorizontalOptions="Center"/>
        <Entry x:Name="TitleEntry" Placeholder="Please Enter your New Task Name Here ❤"/>
        <Grid ColumnDefinitions="1*,1*">
            <Button Grid.Column="0" Text="Yes" Clicked="OnYesClicked" />
            <Button Grid.Column="1" Text="No" Clicked="OnNoClicked" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>